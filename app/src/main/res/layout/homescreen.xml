<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homescreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- Top App Bar -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/menu_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/menu_icon"
            android:scaleType="centerInside"
            android:padding="12dp"
            app:tint="?attr/colorPrimary"
            android:contentDescription="Menu" />

        <TextView
            android:id="@+id/Title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bottlr"
            android:textColor="?attr/colorOnSurface"
            android:textSize="24sp"
            android:fontFamily="@font/downhill"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/account_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/cloud_empty"
            android:scaleType="centerInside"
            android:padding="12dp"
            app:tint="?attr/colorOnSurface"
            android:contentDescription="Account" />

    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Section Title -->
            <TextView
                android:id="@+id/section_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Collection"
                android:textColor="?attr/colorOnSurface"
                android:textSize="28sp"
                android:fontFamily="@font/exodemibold"
                android:layout_marginBottom="16dp" />

            <!-- Stats Cards Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Liquor Cabinet Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_liquor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="?attr/colorSurfaceVariant"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_menu_gallery"
                            app:tint="?attr/colorPrimary"
                            android:contentDescription="Bottles" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Liquor Cabinet"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="14sp"
                            android:layout_marginTop="12dp" />

                        <TextView
                            android:id="@+id/bottle_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 bottles"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="24sp"
                            android:fontFamily="@font/exodemibold"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Cocktail Menu Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_cocktails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="?attr/colorSurfaceVariant"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_menu_gallery"
                            app:tint="?attr/colorPrimary"
                            android:contentDescription="Cocktails" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cocktail Menu"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="14sp"
                            android:layout_marginTop="12dp" />

                        <TextView
                            android:id="@+id/cocktail_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 cocktails"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="24sp"
                            android:fontFamily="@font/exodemibold"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Quick Actions Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textColor="?attr/colorOnSurface"
                android:textSize="20sp"
                android:fontFamily="@font/exodemibold"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="12dp" />

            <!-- Quick Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add_bottle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Add Bottle"
                    android:textColor="?attr/colorOnPrimary"
                    app:backgroundTint="?attr/colorPrimary"
                    app:icon="@drawable/whiskeyadd"
                    app:iconGravity="textStart"
                    app:iconTint="?attr/colorOnPrimary"
                    app:cornerRadius="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add_cocktail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Add Cocktail"
                    android:textColor="?attr/colorOnPrimary"
                    app:backgroundTint="?attr/colorPrimary"
                    app:icon="@drawable/whiskeyadd"
                    app:iconGravity="textStart"
                    app:iconTint="?attr/colorOnPrimary"
                    app:cornerRadius="8dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Navigation Drawer (kept for compatibility) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nav_window"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface"
        android:clickable="true"
        android:elevation="8dp"
        android:translationX="-280dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/exit_nav_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/transparent"
            android:text=""
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Nav Header -->
        <LinearLayout
            android:id="@+id/nav_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="?attr/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@mipmap/ic_launcher"
                android:contentDescription="Bottlr" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bottlr"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="24sp"
                android:fontFamily="@font/exodemibold"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Nav Menu Items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/nav_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/menu_home_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_home_24"
                    app:tint="?attr/colorOnSurface"
                    android:contentDescription="Home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_liquorcab_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_menu_gallery"
                    app:tint="?attr/colorOnSurface"
                    android:contentDescription="Bottles" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Liquor Cabinet"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_cocktail_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_menu_gallery"
                    app:tint="?attr/colorOnSurface"
                    android:contentDescription="Cocktails" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cocktail Menu"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/colorOutline"
                android:layout_marginVertical="8dp" />

            <LinearLayout
                android:id="@+id/menu_settings_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/settings"
                    app:tint="?attr/colorOnSurface"
                    android:contentDescription="Settings" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrim overlay for nav drawer -->
    <View
        android:id="@+id/nav_scrim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:elevation="7dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
