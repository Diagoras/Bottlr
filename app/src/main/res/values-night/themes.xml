<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (Dark mode). -->
    <style name="Theme.Bottlr" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color - muted amber -->
        <item name="colorPrimary">@color/amber_primary</item>
        <item name="colorPrimaryContainer">@color/amber_dark</item>
        <item name="colorOnPrimary">@color/on_amber</item>
        <item name="colorOnPrimaryContainer">@color/amber_light</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryContainer">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorSurfaceVariant">@color/surface_dark_variant</item>
        <item name="colorOnSurface">@color/Nearwhite</item>
        <item name="colorOnSurfaceVariant">@color/supertransparent_black</item>
        <!-- Background -->
        <item name="android:colorBackground">@color/surface_dark</item>
        <item name="colorOnBackground">@color/Nearwhite</item>
        <!-- Error -->
        <item name="colorError">@color/error</item>
        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/surface_dark</item>
    </style>
</resources>