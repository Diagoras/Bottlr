<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (Light mode). -->
    <style name="Theme.Bottlr" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color - muted amber -->
        <item name="colorPrimary">@color/amber_dark</item>
        <item name="colorPrimaryContainer">@color/amber_light</item>
        <item name="colorOnPrimary">@color/on_amber</item>
        <item name="colorOnPrimaryContainer">@color/amber_dark</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryContainer">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorSurfaceVariant">@color/surface_light_variant</item>
        <item name="colorOnSurface">@color/Nearblack</item>
        <item name="colorOnSurfaceVariant">@color/transparent_black</item>
        <!-- Background -->
        <item name="android:colorBackground">@color/surface_light</item>
        <item name="colorOnBackground">@color/Nearblack</item>
        <!-- Error -->
        <item name="colorError">@color/error_light</item>
        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/surface_light</item>
    </style>

    <style name="Theme.Bottlr.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Bottlr.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Bottlr.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Rounded image corners for compact list items -->
    <style name="RoundedImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>